{
  "name": "frontend",
  "version": "0.0.1",
  "description": "Frontend JS for VisualInk",
  "main": "bin/Frontend.js",
  "scripts": {
    "pre-gen": "mkdir -p src/generated && lezer-generator src/syntax.grammar -o src/generated/parser",
    "build-js": "npm run pre-gen && rollup -c",
    "watch-js": "npm run pre-gen && rollup -cw --no-watch.clearScreen",
    "build-css": "sass --load-path=node_modules style.scss ../wwwroot/style.css",
    "watch-css": "npm run build-css -- --watch",
    "test": "npm run pre-gen && vitest",
    "watch-test": "npm run pre-gen && vitest --clearScreen=false"
  },
  "author": "Michael Newton",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@lezer/generator": "^1.8.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.0",
    "bulma": "^1.0.4",
    "rollup": "^4.52.3",
    "sass": "^1.93.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/lint": "^6.9.0",
    "codemirror": "^6.0.2",
    "htmx.org": "^2.0.7",
    "idiomorph": "^0.7.4"
  }
}
